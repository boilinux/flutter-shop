from django.db import models
from django.contrib.auth.models import User
from apishop.models import MyUser


class Amenities(models.Model):
    title = models.CharField(max_length=100)
    description = models.CharField(max_length=300)
    images = models.ImageField(upload_to='files/amenities', blank=True)

    def __str__(self):
        return self.title


class Room(models.Model):
    title = models.CharField(max_length=100)
    description = models.CharField(max_length=300)
    images = models.ImageField(upload_to='files/room', blank=True)
    rate = models.CharField(max_length=50)

    def __str__(self):
        return self.title


class Resort(models.Model):
    Room = models.ForeignKey(Room, related_name='resort_room',
                             on_delete=models.CASCADE, blank=True, null=True)
    Amenities = models.ForeignKey(
        Amenities, related_name='resort_amenities', on_delete=models.CASCADE, blank=True, null=True)
    title = models.CharField(max_length=100)
    description = models.CharField(max_length=300)
    images = models.ImageField(upload_to='files/resort', blank=True)

    def __str__(self):
        return self.title


class Reservation(models.Model):
    MyUser = models.ForeignKey(
        MyUser, related_name='customer', on_delete=models.CASCADE)
    Room = models.ForeignKey(Room, related_name='room_asignment',
                             on_delete=models.CASCADE, blank=True, null=True)
    start_date = models.DateField()
    end_date = models.DateField()

    def __str__(self):
        return self.MyUser.email
